/* 轮播图相关 */
.card-swiper {
    width: 100%;
	height: 400rpx !important;
    padding: 12rpx 0;
    background: #fff;
    margin-top: 10rpx;
}

.card-swiper swiper-item {
	width: 610rpx !important;
	left: 70rpx;
	box-sizing: border-box;
	overflow: initial;
}

.card-swiper swiper-item .swiper-item {
	width: 100%;
	display: block;
	height: 100%;
	border-radius: 10rpx;
	transform: scale(0.9);
	transition: all 0.2s ease-in 0s;
	overflow: hidden;
}

.card-swiper swiper-item .swiper-item image {
    width: 100%;
    max-height: 100%;
    border-radius: 10rpx;
}

.card-swiper swiper-item.cur .swiper-item {
	transform: none;
	transition: all 0.2s ease-in 0s;
}